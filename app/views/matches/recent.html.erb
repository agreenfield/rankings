 

<body>
  <h3>Recent Matches</h3>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Date</th>
        <th>Winner</th>
        <th>Loser</th>
        <th>Score</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @matches.each do |m| %>
        <tr>
          <td>
            <%= m.date.strftime("%A, %x") %> 
          </td>
          <td><%= m.winner.name %></td>
          <td><%= m.loser.name %></td>
          <td><%= "#{m.winner_score}/#{m.loser_score}" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</body>